<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="20pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:onClick="resetEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btnPlusMinus"
                android:text="+/-"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btnPercent"
                android:text="%"
                android:onClick="percentEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btnMultiply"
                android:text="*"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btnDevide"
                android:text="/"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@drawable/buletan"
                android:textSize="20sp"
                ></Button>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="4.4"
            android:background="@drawable/buletan"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnComa"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@drawable/buletan"
            android:onClick="numberEvent"
            android:text="," />

        <Button
            android:id="@+id/btnEquals"
            android:text="="
            android:onClick="equalsEvent"
            android:textColor="#FFF"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@drawable/buletan"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>

